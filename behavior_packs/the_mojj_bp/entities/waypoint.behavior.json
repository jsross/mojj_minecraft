{
  "format_version": "1.16.210",
  "minecraft:entity": {
    "description": {
      "identifier": "mojj:waypoint",
      "runtime_identifier": "mojj:waypoint",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": true
    },
    "components": {
      "minecraft:type_family": {
        "family": ["inanimate", "mob"]
      },
      "minecraft:collision_box": {
        "width": 0.5,
        "height": 1.975
      },
      "minecraft:physics": {
        "has_gravity": true,
        "has_collision": true
      },
      "minecraft:pushable": {
        "is_pushable": false
      },
      "minecraft:nameable": {
        "always_show": true,
        "default_trigger": {
          "event": "mojj:waypoint:on_named",
          "target": "self"
        }
      },
      "minecraft:persistent": {}
    },
    "component_groups": {
      "mojj:named_waypoint": {}
    },

    "events": {
      "mojj:waypoint:on_named": {
        "add": {
          "component_groups": ["mojj:named_waypoint"]
        }
      }
    }
  }
}
